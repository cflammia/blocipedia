<h1>Wikis</h1>
<% if policy(Wiki.new).create? %>
<%= link_to "Create New Wiki", new_wiki_path(@wiki), class: 'btn btn-success' %>
<% end %>

<% @wikis.each do |wiki| %>
  <div class="media">
    <div class="media-body">
      <h4 class="media-heading">
        <%= link_to wiki.title, wiki %>
      </h4>
    </div>
  </div>
<% end %>

<% if policy(Wiki).edit? %>
<%= link_to "Edit Wiki", edit_wiki_path(@wiki), class: 'btn btn-success' %>
<% end %>
